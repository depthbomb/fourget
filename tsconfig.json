{
	"compilerOptions": {
		"paths": {
			"~*": ["./src/*"]
		},
		"outDir": "dist",
		"module": "commonjs",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitThis": true,
		"noImplicitReturns": true
	},
	"include": ["src/**/*.ts", "scripts/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}